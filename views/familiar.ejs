                    <script src="https://kit.fontawesome.com/f87c891e2c.js" crossorigin="anonymous"></script>
                    <meta charset="UTF-8">
                    <meta http-equiv="X-UA-Compatible" content="IE=edge">
                    <meta name="viewport" content="width=device-width, initial-scale=1.0">
                    <link rel="stylesheet" href="../../css/style.css">
                    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css"
                        rel="stylesheet"
                        integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6"
                        crossorigin="anonymous">

                    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js"
                        integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf"
                        crossorigin="anonymous"></script>
                    <title>Customer Infomation</title>
                </head>

                <body>
                    <div class="sidenav">
                        <a href="/manager/sale">SaLing</a>
                        <a href="/manager/menu?page=1&user=<%=remember%>">Menu</a>
                        <a href="/manager/employeeinfo?page=1&user=<%=remember%>">Employee Infomation</a>
                        <a href="/manager/customerinfo?page=1&user=<%=remember%>">Custumer Infomation</a>
                        <a href="/manager?user=<%=remember%>">My Infomation</a>
                        <a href="/">Logout</a>
                    </div>
                    <div class="main-content">
                        <div class="title_taskbar"
                            style="width: 100%; height: 100px;background-color: black;position: center;margin: auto; font-size: 33px">
                            <a href="/manager">
                                <div class="text-center">
                                    <img src="../../img/JOEY2.png" class="rounded" alt="JR">
                                </div>
                            </a>
                        </div>
                        <div class="info-content" >
                            <h1 style="width: 400px; margin: 0 auto 10px auto; text-align: center;">Customer Infomation</h1>
                            <div class="dropdown" style="float: right;">
                                <a class="btn btn-secondary dropdown-toggle" style="width: auto;" href="#" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
                                 Option
                                </a>
                              
                                <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                  <li><a class="dropdown-item" href="/manager/customerinfo?page=1&user=<%=remember%>" >All Customer</a></li>
                                  <li><a class="dropdown-item" href="/manager/customerinfo/top10?page=1&user=<%=remember%>">Top 10 with the most order</a></li>
                                  <li><a class="dropdown-item" href="/manager/customerinfo/familiar?page=1&user=<%=remember%>">Familiar Customer</a></li>
                                </ul>
                              </div>
                        <table class="table table-striped">
                            <thead>     
                                <tr>
                                    <th scope="col">STT</th>
                                    <th scope="col">Email</th>
                                    <th scope="col">Name</th>
                                    <th scope="col">Phone Number</th>
                                    <th scope="col">Area</th>
                                    <th scope="col">Town</th>
                                    <th scope="col">Number of Order</th>
                                </tr>
                            </thead>
                            <tbody id="print">
                                <%info.forEach(function(cus){%>
                                    <tr>
                                        <th>
                                            <%=number%>
                                        </th>
                                        <th scope="row">
                                            <%=cus.email%>
                                        </th>
                                        <td>
                                            <%=cus.name%>
                                        </td>
                                        <td>
                                            <%=cus.phone%>
                                        </td>
                                        <td>
                                            <%=cus.area%>
                                        </td>
                                        <td>
                                            <%=cus.town%>
                                        </td>
                                        <td>
                                            <%=cus.count%>
                                        </td>
                                    </tr>
                                    <% number +=1%>
                                        <% }); %>
                            </tbody>
                        </table>
                    </div>
                        <nav aria-label="Page navigation example" style="text-align: center;">
                            <ul class="pagination">
                                <% if (page> 1){%>
                                    <li class="page-item"><a class="page-link"
                                            href="/manager/customerinfo/familiar?page=<%=parseInt(page)-1%>&user=<%=remember%>">Previous</a></li>
                                    <% } %>
                                        <% if (page==1) {%>
                                            <li class="page-item"><a class="page-link">Previous</a></li>
                                            <%}%>
                                                <%for(var i=1; i< Math.ceil(numberpage) + 1; ++i){%>
                                                    <%if(i==page){%>
                                                        <li class="page-item active"><a class="page-link"
                                                                href="/manager/customerinfo/familiar?page=<%=parseInt(i)%>&user=<%=remember%>">
                                                                <%=i%>
                                                            </a></li>
                                                        <%} else{%>
                                                            <li class="page-item"><a class="page-link"
                                                                    href="/manager/customerinfo/familiar?page=<%=parseInt(i)%>&user=<%=remember%>">
                                                                    <%=i%>
                                                                </a></li>
                                                            <%}%>
                                                                <%}%>
                                                                    <% if (page <=(numberpage)){%>
                                                                        <li class="page-item"><a class="page-link"
                                                                                href="/manager/customerinfo/familiar?page=<%=parseInt(page) +1%>&user=<%=remember%>">Next</a>
                                                                        </li>
                                                                        <% } %>
                                                                            <% if (page> (numberpage)){%>
                                                                                <li class="page-item"><a
                                                                                        class="page-link">Next</a></li>
                                                                                <% } %>
                            </ul>
                        </nav>
                        <footer class="bg-dark text-center text-white">
